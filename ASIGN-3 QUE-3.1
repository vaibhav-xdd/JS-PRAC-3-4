<!DOCTYPE html>
<html>
<body>
<script>
let arr = [1, 2, 3, 4, 5, 6, 7, 8];
let even = 0, odd = 0;

for(let i = 0; i < arr.length; i++) {
  if(arr[i] % 2 == 0) {
    even++;
  } else {
    odd++;
  }
}

document.write("Even numbers: " + even + "<br>");
document.write("Odd numbers: " + odd);
</script>
</body>
</html>
